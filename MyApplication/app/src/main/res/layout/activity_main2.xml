<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration Form"
        android:id="@+id/lblHeading"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/lblUsername"
        android:text="Username:"
        android:layout_below="@id/lblHeading"
        android:gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        />
    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/lblUsername"
        android:layout_below="@id/lblHeading"
        android:importantForAutofill="no"
        android:inputType="text"
        android:hint="@string/username_hint"
        android:layout_alignBaseline="@id/lblUsername"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/lblPassword"
        android:text="Password"
        android:layout_below="@id/lblUsername"
        android:gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        />
    <EditText
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtPassword"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:autofillHints="password"
        android:layout_toEndOf="@id/lblPassword"
        android:importantForAutofill="no"
        android:layout_alignBaseline="@id/lblPassword"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/lblGender"
        android:text="Gender:"
        android:textSize="20sp"
        android:layout_below="@id/lblPassword"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp" />

    <RadioGroup
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/txtGender"
        android:layout_below="@id/lblPassword"
        android:layout_toRightOf="@id/lblGender">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="16sp"
            android:id="@+id/txtMale"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="16sp"
            android:id="@+id/txtFemale"
            />
    </RadioGroup>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/lblStates"
        android:text="State:"
        android:textSize="20sp"
        android:layout_below="@id/lblGender"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/states"
        android:textSize="16sp"
        android:entries="@array/spinner_items"
        android:layout_below="@id/txtGender"
        android:layout_toRightOf="@id/lblStates" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/lblHobbies"
        android:text="Hobbies:"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/lblStates"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Programming"
        android:textSize="18sp"
        android:id="@+id/lblProgramming"
        android:layout_toRightOf="@id/lblHobbies"
        android:layout_below="@id/states"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hacking"
        android:checked="true"
        android:textSize="18sp"
        android:layout_below="@id/states"
        android:layout_toRightOf="@id/lblProgramming"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_button"
        android:id="@+id/btnLogin"
        android:layout_below="@id/lblHobbies"
        android:layout_marginTop="20dp"
        android:layout_marginStart="130dp"/>

</RelativeLayout>